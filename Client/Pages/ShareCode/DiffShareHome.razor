@page "/diffShare"
<MatH4 Class="text-center">Share code</MatH4>
<MatButton Link="/">Home</MatButton>
@if (!userSubmitted)
{
    <MatButton Class="text-center" Raised="true" @onclick="UpdateUser">Sign-in to begin team coding</MatButton>
}

@if (userSubmitted)
{
    <MatButton OnClick="UpdateUser">Update User</MatButton>
    <MatButton OnClick="UpdateCodeSnippet">Code Snippet Menu</MatButton>
    <MatButton OnClick="UpdateFromPublicRepo">Get Code From Github Repo</MatButton>
    <br />
    <MatButton Raised="isNewChat" Icon="chat" Outlined="isNewChat" Unelevated="!isNewChat" OnClick="ShowChatContent">Show Chat</MatButton>
   
}
@if (isSelectSnippet)
{
<div class="mat-layout-grid">
    <div class="mat-layout-grid-inner">
       
        <div class="mat-layout-grid-cell mat-layout-grid-cell-span-12">
            <DiffShareHub UserName="@userName" OtherUser="@otherUser" Snippet="@CodeSnippet"
                          GroupName="@teamname" OnNewMessage="HandleNewMessage"/>
        </div>
       
    </div>
</div>
}
@if (!isSelectSnippet && userSubmitted)
{
    <MatH4 Class="text-center">Select a code snippet to begin</MatH4>
}

